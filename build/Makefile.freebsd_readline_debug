.PATH : src test
.include "src/source.mk"
-include "depend.mk"
object = ${source:.c=.o}
depend = depend.mk
a.out = npt

LISP_C = -DLISP_FREEBSD -DLISP_READLINE
LISP_C += -g -DLISP_DEGRADE -DLISP_DEBUG -DLISP_MODE_DEGRADE
LISP_LIB = -lm -lreadline -L/usr/local/lib
CFLAGS = -std=c99 -Wall -Isrc -Itest -I/usr/local/include ${LISP_C}

build : ${object}
	${CC} ${CFLAGS} -o ${a.out} ${object} ${LISP_LIB}

depend : ${source}
	@echo make depend
	@cc ${CFLAGS} -E -MM ${.ALLSRC} > depend.mk

.PHONY : clean
clean :
	-rm -f ${depend} ${object} ${a.out} _debug.txt

