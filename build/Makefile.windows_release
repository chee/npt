!include <src\release.mk>
object = $(source:.c=.obj)
output = npt.exe

LISP_C = /DLISP_WINDOWS
LISP_LIB = Shell32.lib
CFLAGS = /O2 /Ot /GL /Gw /TC /W3 /Isrc $(LISP_C)

$(output) : $(object)
	LINK.EXE /RELEASE /LTCG /OUT:$(output) *.obj $(LISP_LIB)

{src\}.c{}.obj::
	$(CC) $(CFLAGS) /c $<

clean :
	-DEL /f *.obj $(output) _debug.txt

