!include <src\source.mk>
object = $(source:.c=.obj)
output = npt.exe

LISP_C = /DLISP_32BIT /DLISP_WINDOWS /DLISP_DEGRADE /DLISP_DEBUG /DLISP_MODE_DEGRADE
LISP_LIB = Shell32.lib
CFLAGS = /Zi /GS /RTCscu /TC /W3 /Isrc /Itest $(LISP_C)

$(output) : $(object)
	LINK.EXE /DEBUG /OUT:$(output) *.obj $(LISP_LIB)

{src\}.c{}.obj::
	$(CC) $(CFLAGS) /c $<

{test\}.c{}.obj::
	$(CC) $(CFLAGS) /c $<

clean :
	-DEL /f *.obj $(output) _debug.txt

